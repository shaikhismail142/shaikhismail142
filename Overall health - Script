echo "Diskspace usage is:"
echo " $(df -h )"
echo "============================================"
echo "Free Memory is:"
echo " $(free -m)"
echo "--------------------"
echo "Top Consumers(Memory/CPU):"
echo "$(ps -eo pid,ppid,cmd,%mem,%cpu --sort=-%mem | head)"
echo "============================================"
echo "UPTIME:"
echo "$(uptime)"
echo "============================================"
echo "CPU Information:"
echo "-----------------"
echo "$(cat /proc/cpuinfo)"
